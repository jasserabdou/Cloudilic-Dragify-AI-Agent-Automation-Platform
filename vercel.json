{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    { 
      "src": "/assets/(.*)", 
      "dest": "/assets/$1" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}
